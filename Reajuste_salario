salario = float(input('qual é o seu salario?'))

valor_baixo = salario * 0.20
valor_medio = salario * 0.15
medio = salario * 1.15
valor_alto = salario * 0.10
alto = salario * 1.10
valor_altissimo = salario * 0.05
altissimo = salario * 1.05

print('Antes do reajuste: ', salario)

if salario <= 280:
    print(f'esse é o valor que voce recebeu de almento: R${valor_baixo:.2f} agora esse é seu valor atual! {valor_baixo + salario}')
elif salario <= 700:
    print(f'esse é o valor que voce recebeu de almento: R${valor_medio:.2f} agora esse é seu valor atual! {medio}')
elif salario <= 1500:
    print(f'esse é o valor que voce recebeu de almento: R${valor_alto:.2f} agora esse é seu valor atual! {alto}')
elif salario > 1500:
    print(f'esse é o valor que voce recebeu de almento: R${valor_altissimo:.2f} agora esse é seu valor atual! {altissimo}')

